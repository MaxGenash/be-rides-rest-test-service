{
    "name": "be-take-home-test",
    "version": "1.0.0",
    "description": "A coding assessment for Xendit backend interviews",
    "main": "src/index.ts",
    "engines": {
        "node": ">=16 <17",
        "npm": ">=8 <9"
    },
    "directories": {
        "test": "src/__tests__"
    },
    "scripts": {
        "test": "jest --verbose",
        "test-with-coverage": "jest --coverage --verbose",
        "pretest:load": "npm run build && pm2 start -f ./build/index.js",
        "test:load": "artillery run ./src/__tests__/load/ridesLoadTest.yml",
        "posttest:load": "pm2 stop ./build/index.js",
        "build-watch": "tsc -w",
        "build": "tsc",
        "prestart": "npm run build",
        "start": "node ./build/index.js",
        "lint": "eslint . && prettier --check . --ignore-unknown",
        "lint-and-fix": "eslint . --fix && prettier --write . --ignore-unknown"
    },
    "keywords": [
        "Xendit"
    ],
    "author": "Bo",
    "license": "UNLICENSED",
    "dependencies": {
        "body-parser": "^1.20.0",
        "express": "^4.18.1",
        "express-winston": "^4.2.0",
        "helmet": "^5.1.0",
        "sqlite3": "^5.0.8",
        "swagger-ui-express": "^4.4.0",
        "winston": "^3.7.2"
    },
    "devDependencies": {
        "artillery": "^2.0.0-18",
        "@types/express": "^4.17.13",
        "@types/jest": "^28.1.1",
        "@types/node": "^17.0.43",
        "@types/sqlite3": "^3.1.8",
        "@types/supertest": "^2.0.12",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "^5.28.0",
        "eslint": "^8.17.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^26.5.3",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^8.0.1",
        "jest": "^28.1.1",
        "lint-staged": "^13.0.1",
        "pm2": "^5.2.0",
        "prettier": "^2.6.2",
        "supertest": "^6.2.3",
        "ts-jest": "^28.0.5",
        "typescript": "^4.7.3"
    }
}
